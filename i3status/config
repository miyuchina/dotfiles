# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#88b090"
        markup = "pango"
}

order += "volume master"
order += "battery all"
order += "wireless _first_"
order += "tztime local"

wireless _first_ {
        format_up   = "直 %essid"
        format_down = "睊 down"
}

battery all {
        format = "%status %percentage"
        integer_battery_capacity = true
        last_full_capacity = true
        status_full = ""
        status_bat  = ""
        status_chr  = ""
        low_threshold = 30
        threshold_type = time
}

tztime local {
        format = " %Y-%m-%d %H:%M"
}

volume master {
        format = "墳 %volume"
        format_muted = "ﱝ"
        device = "pulseaudio"
}

load {
        format = "load: %1min"
}

disk "/" {
        format = "/ %avail"
}
