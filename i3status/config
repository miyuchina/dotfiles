# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
        colors = true
        interval = 10
        color_good = "#b8bb26"
        color_degraded = '#fabd2f'
        color_bad = '#fb4934'
        markup = "pango"
}

order += "volume master"
order += "battery all"
order += "wireless _first_"
order += "ethernet _first_"
order += "time"

wireless _first_ {
        format_up   = "<span color='#bdae93'>直 %ip</span>"
        format_down = ""
}

ethernet _first_ {
        format_up = " %ip"
        format_down = ""
}

battery all {
        format = "%status %percentage"
        integer_battery_capacity = true
        last_full_capacity = true
        status_full = ""
        status_bat  = ""
        status_chr  = ""
        low_threshold = 30
        threshold_type = time
}

time {
        format = " %Y-%m-%d %H:%M  "
}

volume master {
        format = "墳  %volume"
        format_muted = "<span color='#bdae93'>婢  %volume</span>"
        device = "pulseaudio"
}
