# scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus       scratchpad show 

# display time
bindsym $mod+T exec --no-startup-id \
    dunstify -r 1000 "$(date '+%F  %r')" "Battery: $(acpi | grep -o '[[:digit:]]\+%' | head -1)"

# gaps
for_window [class="^.*"] border pixel 0
gaps inner 30

set $mode_gaps Toggle gaps: (0) off (1) on
bindsym $mod+g mode "$mode_gaps"
mode "$mode_gaps" {
    bindsym 0 mode "default", gaps inner all set  0
    bindsym 1 mode "default", gaps inner all set 30
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# function keys
bindsym XF86AudioMute         exec --no-startup-id "pamixer --toggle-mute; percent_notify 'Volume' '' $(if [ $(pamixer --get-mute) == true ]; then echo 0; else echo $(pamixer --get-volume); fi)"
bindsym XF86AudioLowerVolume  exec --no-startup-id "pamixer --decrease  5; percent_notify 'Volume' '' $(pamixer --get-volume)"
bindsym XF86AudioRaiseVolume  exec --no-startup-id "pamixer --increase  5; percent_notify 'Volume' '' $(pamixer --get-volume)"
bindsym XF86AudioMicMute      exec --no-startup-id "amixer set Capture toggle"
bindsym XF86MonBrightnessDown exec --no-startup-id "light -U 5; percent_notify 'Brightness' '' $(light)"
bindsym XF86MonBrightnessUp   exec --no-startup-id "light -A 5; percent_notify 'Brightness' '' $(light)"
bindsym XF86Display           exec --no-startup-id /home/mi/.config/i3/i3_monitor
bindsym --release Print       exec --no-startup-id "scrot -e 'mv $f /home/mi/Pictures; dunstify -r 1000 'Saved screenshot!'"
bindsym --release Shift+Print exec --no-startup-id "scrot -s -e 'mv $f /home/mi/Pictures; dunstify -r 1000 'Saved screenshot!'"

# lock screen
bindsym $mod+Control+L exec --no-startup-id i3lock -B 10

# startup tasks
exec --no-startup-id /home/mi/.config/i3/i3_startup
